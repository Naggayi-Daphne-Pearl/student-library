doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='/css/index.css')
  title REPORTS
// nav bar   
.topnav
  .left
    a.active(href='/home') REFACTORY LIBARY 
  .right
    a(href='/logout') LOG OUT
    a(href='/reports') REPORTS
    a(href='/home') HOME

// table of reports
.container.py-5.h-100
    .h1(style='font-size:30px; position:relative; margin-left:20rem; font-weight:bold;') BOOKS TAKEN 
    .container.row.justify-content-center
      .card.bg-light
        table.table
          thead.thead-dark
            tr
              th(scope='col' class='th') STUDENT NAME
              th(scope='col' class='th') PHONENUMBER
              th(scope='col' class='th') STUDENT ID
               th(scope='col' class='th') BOOK TAKEN

              
          tbody
            if taken.length 
            each taken in takens
             tr     
              td(class='td') #{taken.username}
              td(class='td') #{taken.phonenumber}
              td(class='td') #{taken.nin} 
              td(class='td') #{taken.booktaken}
              td
          
                div
                      button.btn.btn-primary(type='submit'  data-bs-target='#staticBackdrop' style='background-color:#f1f1f1; margin-right: 5px;')
                          img(src='/images/edit.png' style='width: 30px; height: 30px;')
                
                          form(method="GET" action="/deleteTaken/"+taken._id)
                            input(type="hidden" name="delete" value=taken._id)
                            button.btn.btn-danger(type='submit' data-bs-toggle='modal' onclick='myFunction()' data-bs-target='#staticBackdrop')
                              img(src='/images/deleteicon.jpg' style='width: 30px; height: 30px;')


script(src='/bootstrap-5.1.3-dist/js/bootstrap.js')
